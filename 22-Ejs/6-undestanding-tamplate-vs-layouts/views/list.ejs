<!-- asa putem, include header si footer din alte locati -->

<%- include("header") -%>


  <div class="box" id="heading">
    <h1> <%=listTitle%> </h1>
  </div>


<div class="box">

    <%for(let i=0;i<newListItems.length;i++){ %>
      <div class="item">
        <input type="checkbox">
        <p><%=newListItems[i]%></p>
        </div>
  <%  } %>
 
  <form action="/" method="post" class="item">
    <input type="text" name="newItem" placeholder="New item" autocomplete="off">
  <!-- acum cand apasam butonu putem adauga nou item depanzand de pagina(adaugam de forma dinamica)  daca name adica list are o valuare de work se adauga la work altfel la home adica /-->
    <button type="submit" name="list" value=<%= listTitle %>> +</button>
  </form>
</div>
   

<%- include("footer") -%>